# Bitunix API Credentials (REQUIRED)
BITUNIX_API_KEY=your_api_key_here
BITUNIX_SECRET_KEY=your_secret_key_here

# Trading Configuration
SYMBOLS=BTCUSDT,ETHUSDT
DRY_RUN=true
BASE_SIZE_RATIO=0.002
MAX_POSITION_SIZE=0.01
MAX_DAILY_LOSS=0.05
LEVERAGE=20
MARGIN_MODE=ISOLATION
RISK_USD=25.0

# ML Configuration
MODEL_PATH=models/model.onnx
PROB_THRESHOLD=0.65
ML_TIMEOUT=5s

# System Configuration
DATA_PATH=./data
METRICS_PORT=8080
LOG_LEVEL=info

# Optional: ML Server
ML_SERVER_PORT=8081

# Optional: Config file (overrides individual settings)
CONFIG_FILE=config.yaml
